<?xml version="1.0" encoding="UTF-8"?>
<syntax name="gleam">
    <meta>
        <name>Gleam</name>
        <type>script</type>
        <preferred-file-extension>gleam</preferred-file-extension>
    </meta>

    <detectors>
        <extension priority="1.0">Gleam</extension>
    </detectors>

    <!--<indentation>
        <increase>
            <expression></expression>
        </increase>
        <decrease>
            <expression></expression>
        </decrease>
    </indentation>-->

    <comments>
        <single>
            <expression>//</expression>
        </single>
        <multiline>
            <starts-with>
                <expression></expression>
            </starts-with>
            <ends-with>
                <expression></expression>
            </ends-with>
        </multiline>
    </comments>

    <!--<injection>
        <expression>^(gleam)$</expression>
    </injection>-->

    <tree-sitter language="gleam">
        <highlights path="highlights.scm" />
        <symbols  path="symbols.scm" />
        <folds path="folds.scm" />
    </tree-sitter>
</syntax>
